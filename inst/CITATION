citHeader("To cite crowdforecastr in publications use:")

citEntry(entry = "Manual",
         title        = "Crowdforecastr: eliciting crowd forecasts in R shiny",
         author       = personList(as.person("Nikos I. Bosse"),
                                   as.person("Sam Abbott"),
                                   as.person("EpiForecasts"),
                                   as.person("Sebastian Funk")),
         year         = "2020",
         doi          = "10.5281/zenodo.4618519",
         textVersion  =
           paste("Nikos I. Bosse, Sam Abbott, EpiForecasts, and Sebastian Funk (2020).",
                 "Crowdforecastr: eliciting crowd forecasts in R shiny, ",
                 "DOI: 10.5281/zenodo.4618519")
)


